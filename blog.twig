{% extends "layout.twig" %}

{% block content %}

<div class="bk-pt-blog">

    <!-- HEADER !-->
    <header>
        <div class="wrapper clearfix">
            <div class="res-col columns span-20-80">
                <div class="column span-20">
                    <div class="logo">
                        <a href="/"><img src="{{asset('/images/logo.png')}}" class="bk-logo"></a>
                    </div>
                </div>
                <div class="column span-80">
                    <nav class="nav-desktop clearfix">
                        <ul>
                            <li><a href="/tour">Tour</a></li>
                            <li><a href="/partners">Partners</a></li>
                            <li><a href="/developers">Developers</a></li>
                            <li class="selected"><a href="/blog">Blog</a></li>
                            <li><a href="http://partners.basekit.com" class="button small-btn orange">Login</a></li>
                        </ul>
                    </nav>
                    <nav class="nav-mob">
                        <div id="dl-menu" class="dl-menuwrapper">
                            <button class="dl-trigger dl-active">Open Menu</button>
                            <ul class="dl-menu">
                                <li><a href="/tour">Tour</a></li>
                                <li><a href="/partners">Partners</a></li>
                                <li><a href="/developers">Developers</a></li>
                                <li class="selected"><a href="/blog">Blog</a></li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <!-- SUB NAV BAR !-->
    <section class="partners-subnav">
        <div class="wrapper">
            <div class="res-col columns span-20-80">
                <div class="column span-20">
            	   {{widget('content', 'subavheader', {"content":'<h2 class="hwhite">Basekit Blog</h2>'})|raw}}
                </div>
                <div class="column span-80">
                    {{widget('blogsearch', 'blogsearch', {})|raw}}
                </div>
            </div>
        </div>
    </section>

    <!-- BLOG !-->
    <section class="main blog">
        <div class="wrapper">
            <!-- INTRO - BREADCRUMB !-->
            <div class="intro-bread">
                <div class="res-col columns span-70-30">
                    <div class="column span-70">
                        {{widget('content', 'subavheader', {"content":'<h5>Stay up to date with the latest <span class="green underline">product</span>, <span class="purple underline">community</span> and <span class="orange underline">technical</span> news.</h5>'})|raw}}
                    </div>
                    <div class="column span-30">
                        <ul class="breadcrumb">
                            <li><a href="/blog">Basekit Blog</a></li>
                            <li><a href="/blog" class="selected">Home</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- MAIN BLOG !-->
            {% if plugins.blog.posts|length %}
     
                {% if plugins.blog.displayBlogHomePageLink %}
                    <a class="blog-back-home" href="/{{ plugins.blog.directory }}">See all recent posts</a>
                {% endif %}
             
                <section class="blog-post-list">
                    {% for post in plugins.blog.posts %}
                        {% set postPermalink = '/' ~ plugins.blog.directory ~ '/' ~ post.slug %}
                        <article class="blog-post-item{% if post.featureImageAssetRef is not null %} has-image{% endif %}">
                            
                            {% if post.featureImageAssetRef is not null %}
                                {% set assetRef = post.featureImageAssetRef %}
                                {% set featureImg = plugins.assets.images[assetRef] %}
                            <div class="blog-post-feature-image-wrap" style="background-image:url('{{ featureImg.url }}')">
                                <img class="blog-post-feature-image" src="{{ featureImg.url }}" alt="">
                            </div>
                            {% endif %}

                            <div class="blog-post-content">
                                <h2 class="blog-post-title">
                                    <a href="{{ postPermalink }}">
                                        {{ post.title|raw }}
                                    </a>
                                </h2>
                                <a href="{{ postPermalink }}" class="blog-post-date">
                                    <time pubdate datetime="{{ post.publishedDate.date }}" class="blog-post-published-date">{{ post.publishedDate.date }}</time>
                                </a>
                                <!--{% if post.summary|length > 0 %}
                                    {% if data.postDisplayType == 'summary' %}-->
                                        <p class="blog-post-summary">{{ post.summary }}</p>
                                        <a href="{{ postPermalink }}" class="blog-post-more-link">Read more...</a>
                                   <!--{ {% else %}-->
                                        <section class="blog-post-body">
                                            {{ post.content|raw }}
                                        </section>
                                    {% endif %}
                                {% endif %}
                                <!--<div class="blog-metadata {% if data.align %}{{data.align}}{% endif %}">
                                    {% if data.showCategory and data.category|length %}
                                    <div class="blog-category">
                                        <span>{{ data.category }}</span>
                                    </div>
                                    {% endif %}
                                    {% if data.showTags and data.tags|length %}
                                    <div class="blog-tags">
                                        {% set count = 0 %}
                                        {% for tag in data.tags %}
                                        {% set count = count + 1 %}
                                        <span class="tag">{{ tag }}{% if count < data.tags|length %},{% endif %}</span>
                                        {% endfor %}
                                    </div>
                                    {% endif %}-->
                                </div>
                            </div>
                        </article>
                    {% endfor%}
                </section>
                
                <footer class="blog-list-footer">
                {% if plugins.blog.currentPage > 1 and plugins.blog.currentPage <= plugins.blog.totalPages %}
                    <a href="{{ plugins.blog.pathFormat ~ (plugins.blog.currentPage - 1) }}" class="blog-post-pagination-pagepaginate-newer">Newer</a>
                {% endif %}

                {% if plugins.blog.totalPages > 1 and plugins.blog.currentPage != plugins.blog.totalPages and plugins.blog.currentPage <= plugins.blog.totalPages %}
                    <a href="{{ plugins.blog.pathFormat ~ (plugins.blog.currentPage + 1) }}" class="blog-post-pagination-page paginate-older">Older</a>
                {% endif %}
                </footer>

                {% else %}
                    <p>There aren't any posts to display.</p>
                {% endif %}
                </div>
    </section>

</div>

<!-- FOOTER !-->
{% include '/includes/footer.twig' %}

{% endblock %}
